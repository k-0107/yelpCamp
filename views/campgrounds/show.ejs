<% layout("layouts/boilerplate") %>
<div class="row">
  <div class="col-6">
    <div class="card mb-3">
      <img src="<%= campground.image %>" class="card-img-top" alt="..." />
      <div class="card-body">
        <h5 class="card-title"><%= campground.title %></h5>
        <p class="card-text"><%= campground.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-secondary">
          <%= campground.location %>
        </li>
        <li class="list-group-item">￥ <%= campground.price %> / 泊</li>
      </ul>
      <div class="card-body">
        <a class="btn btn-info" href="/campgrounds/<%= campground._id %>/edit"
          >編集する</a
        >
        <form
          method="POST"
          action="/campgrounds/<%= campground._id %>?_method=DELETE"
          class="d-inline"
        >
          <button class="btn btn-danger">削除する</button>
        </form>
      </div>
      <div class="card-footer">2 days ago</div>
    </div>
  </div>
  <div class="col-6">
    <h2>レビュー</h2>
    <form
      action="/campgrounds/<%= campground._id %>/reviews"
      class="mb-3 validated-form"
      method="POST"
      novalidate
    >
      <div class="mb-3">
        <label class="form-label" for="rating">評価</label>
        <input
          class="form-range"
          type="range"
          min="1"
          max="5"
          name="review[rating]"
          id="rating"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="body">コメント</label>
        <textarea
          class="form-control"
          name="review[body]"
          id="body"
          cols="30"
          rows="3"
          required
        ></textarea>
        <div class="valid-feedback">OK!</div>
      </div>
      <button class="btn btn-success">投稿する</button>
    </form>
    <% for(review of campground.reviews){ %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">評価：<%= review.rating %></h5>
        <p class="card-text">コメント：<%= review.body %></p>
        <form
          method="POST"
          action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE"
        >
          <button class="btn btn-sm btn-danger">削除する</button>
        </form>
      </div>
    </div>
    <% } %>
  </div>
</div>
